@model PagedList.IPagedList<WLA.Models.WLAHeader>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Work Load Analysis";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-danger" })
</p>
<table class="table">
    <tr>
        <th>
            Tahun
        </th>
        <th>
            Fungsi
        </th>
        <th>
            Jabatan
        </th>
        <th>
            FTE
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tahun)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fungsi.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jabatan.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FTE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))